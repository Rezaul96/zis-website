@model Scorerecord.DTOS.AuthenticationRequest

<section class="splash-screen h-screen sm:h-auto sm:w-screen w-auto bg-white bg-center absolute inset-0 bg-no-repeat animate__animate">
    <div class="splash-screen h-screen sm:h-auto sm:w-screen w-auto bg-cover bg-center absolute inset-0 bg-no-repeat animate__animate"
         style="background-image: url('assets/img/splash.png');"></div>
</section>

<main id="main" class="body-section main-section">
    <div class="container p-0">
        <div class="main-body-section w-100">
            <div class="site-logo-area w-100">
                <a href="#">
                    <img src="~/assets/img/logo.png" alt="logo" class="img-fluid logo-img">
                </a>
            </div>
            <div class="body-content w-100">
                <h1>Welcome Back</h1>
                <p>Welcome Back! Please enter your details</p>
                <div class="form-box">
                    <form asp-controller="Login" asp-action="Login" method="post" class="row align-items-center">
                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                        <div class="col-12">
                            <div class="form-group">
                                <label>Email or username</label>
                                <input type="email" class="form-control" required name="Email" placeholder="Email or username">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="input-group align-items-center mb-4">
                                <label for="password">Password </label>
                                <input type="password" class="form-control" required name="Password" id="password" placeholder="**************">
                                <i class="bi bi-eye-slash" id="togglePassword"></i>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check">
                                <input class="form-check-input" name="RememberMe" type="checkbox" id="inlineFormCheck" checked value="true">
                                <label class="form-check-label" for="inlineFormCheck">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group mb-0 text-end">
                                <a href="@Url.Action("ForgetPassword","Login")" class="forget-label">Forget Password</a>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn login-btn w-100 mt-5">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main><!-- End #main -->
